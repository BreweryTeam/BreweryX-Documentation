---
import "@/styles/tailwind.css";
import { twMerge } from "tailwind-merge";
import StarlightPage from "@astrojs/starlight/components/SimpleStarlightPage.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

interface Props {
    disableFooter?: boolean;
    disableNavBarOffset?: boolean;
}

const { disableFooter, disableNavBarOffset } = Astro.props;
---

<StarlightPage frontmatter={{ title: "BreweryX Documentation" }}>
    <Header />
    <div class={twMerge("overflow-y-visible", !disableNavBarOffset && "mt-[var(--navbar-height)]")}>
        <slot />
    </div>
    {!disableFooter && <Footer />}
</StarlightPage>
