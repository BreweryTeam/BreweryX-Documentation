---
import meta from "@/lib/meta";
---

<div class="grid grid-cols-1 justify-center gap-5 sm:grid-cols-2 lg:grid-cols-3">
    {
        meta.team.map((member) => (
            <a
                class="justif-self relative flex cursor-pointer flex-col items-center gap-5 overflow-hidden rounded-2xl border border-zinc-100/5 bg-black/20 px-15 py-8 transition-transform duration-300 ease-in-out hover:scale-105 lg:px-20"
                href={member.github}
                target="_blank"
            >
                <img class="w-[15rem] rounded-2xl" src={`${member.image}`} />
                <div class="flex flex-col items-center gap-0">
                    <span class="text-3xl font-bold">{member.name}</span>
                    <p class="text-sm text-zinc-200">{member.description}</p>
                </div>
            </a>
        ))
    }
</div>
